load("@aspect_bazel_lib//lib:tar.bzl", "tar")
load("//oci:defs.bzl", "oci_image", "oci_tarball")

tar(
    name = "app",
    srcs = ["test.bash"],
)

oci_image(
    name = "image",
    base = "@ubuntu",
    cmd = ["examples/tarball_incremental_loader/test.sh"],
    tars = [":app"],
)

oci_tarball(
    name = "tarball",
    image = ":image",
    loader = "loader.sh",
    repo_tags = ["test:test"],
)
